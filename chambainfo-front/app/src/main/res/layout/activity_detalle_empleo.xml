<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Azul -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_blue"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Volver" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/detalle_trabajo"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Puesto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cajero/a"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Empleador -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/empleador"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmpleador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Maria Salinas · hace 2 días"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/descripcion"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Se necesita cajero/a para tienda en el Cercado de Arequipa. Horario de 9am a 7pm. Experiencia mínima en manejo de dinero y atención al cliente."
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />

            <!-- Celular de contacto -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/celular_contacto"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCelular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="+51 987 654 321"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Información Adicional -->
            <TextView
                android:id="@+id/tvInfoAdicionalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/informacion_adicional"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInfoAdicional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Ubicación: Cercado, Arequipa\n• Salario: S/ 35 por día\n• Horario: Lunes a sábado"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />

            <!-- Alerta para no registrados -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAlertaRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/light_blue"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/para_postular_necesitas_registrarte"
                    android:textColor="@color/primary_blue_dark"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </androidx.cardview.widget.CardView>

            <!-- Info contacto directo -->
            <TextView
                android:id="@+id/tvInfoContacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/puedes_contactar_directamente"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- Botones de contacto -->
            <LinearLayout
                android:id="@+id/layoutBotonesContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnWhatsApp"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contactar_whatsapp"
                    android:backgroundTint="@color/accent_green"
                    android:drawableStart="@drawable/ic_whatsapp"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btnTelegram"
                    style="@style/Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/contactar_telegram"
                    android:strokeColor="@color/secondary_blue"
                    android:textColor="@color/secondary_blue"
                    android:drawableStart="@drawable/ic_telegram"
                    android:drawablePadding="8dp" />

            </LinearLayout>

            <!-- Botón Crear Cuenta (si no está logueado) -->
            <Button
                android:id="@+id/btnCrearCuenta"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/crear_cuenta"
                android:visibility="gone" />

        </LinearLayout>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>