<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/indicadorNoLeida"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_empleo_icon"
        android:backgroundTint="@color/primary_blue" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva postulación"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMensajeNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Juan Pérez ha postulado a tu empleo"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvFechaNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="hace 5 min"
            android:textColor="@color/text_secondary"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>