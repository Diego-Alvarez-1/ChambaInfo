<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Header Azul -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Volver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mi_perfil"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Foto de perfil -->
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/light_blue">

            <ImageView
                android:id="@+id/ivFotoPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil" />

        </androidx.cardview.widget.CardView>

        <!-- Nombre completo -->
        <TextView
            android:id="@+id/tvNombreCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Juan Pérez Mamani"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Trabajador verificado -->
        <TextView
            android:id="@+id/tvVerificado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/trabajador_verificado"
            android:textColor="@color/accent_green"
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_check"
            android:drawablePadding="4dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/border_gray" />

        <!-- Campos del perfil (solo lectura) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- DNI -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dni"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:background="@drawable/bg_border_gray"
                android:text="74254462 - 9"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

            <!-- Número de celular -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/numero_celular"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:background="@drawable/bg_border_gray"
                android:text="+51 987 654 321"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

            <!-- Correo electrónico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/correo_electronico"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:background="@drawable/bg_border_gray"
                android:text="juan.perez@gmail.com"
                android:textColor="@color/text_primary"
                android:textSize="15sp" />

            <!-- Habilidades -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/habilidades_opcional"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHabilidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:background="@drawable/bg_border_gray"
                android:text="Albañilería, Electricidad básica, Pintura de interiores"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:minLines="2" />

            <!-- Experiencia laboral -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/experiencia_laboral_opcional"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvExperiencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:background="@drawable/bg_border_gray"
                android:text="5 años de experiencia en construcción. Trabajé en proyectos residenciales y comerciales en Arequipa."
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:minLines="3" />

            <!-- Botón Ver mis documentos (deshabilitado) -->
            <Button
                android:id="@+id/btnVerDocumentos"
                style="@style/Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/ver_mis_documentos"
                android:enabled="false" />

            <!-- Botón Guardar cambios (deshabilitado) -->
            <Button
                android:id="@+id/btnGuardarCambios"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:text="@string/guardar_cambios"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    </ScrollView>